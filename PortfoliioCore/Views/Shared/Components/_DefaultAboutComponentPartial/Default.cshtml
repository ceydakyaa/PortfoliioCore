@model List<About>
<section id="about" class="about section">

    <!-- Section Title -->
    @foreach (var item in Model)
    {
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>

            <p>@item.Description</p>
        </div>

        <!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="/iPortfolio-1.0.0/iPortfolio-1.0.0/assets/img/ceyda.jpg" height="300px" width="300px" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.SubTitle</h2>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Adres:</strong> <span>@item.Address</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Mail</span></li>

                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.SubDescription
                    </p>
                </div>
            </div>

        </div>
    }

</section>